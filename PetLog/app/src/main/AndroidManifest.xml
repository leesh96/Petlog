<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swp.petlog">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"></activity>
        <activity android:name=".app.LoginActivity"></activity>
        <activity android:name=".app.SignupDoneActivity"></activity>
        <activity android:name=".app.RegisterActivity"></activity>
        <activity android:name=".app.FindpwActivity"></activity>
        <activity android:name=".app.ResetpwActivity"></activity>
        <activity android:name=".mypet.AddMypetInfoActivity"></activity>
        <activity android:name=".mypet.MypetMainActivity"></activity>
        <activity android:name=".diary.WriteDiaryActivity"></activity>
        <activity android:name=".diary.DiaryListActivity"></activity>
        <activity android:name=".diary.ShowDiaryActivity"></activity>
        <activity android:name=".diary.DiaryDeleteActivity"></activity>

        <activity android:name=".petsta.PetstaMain"></activity>

        <activity android:name=".talktalk.TalktalkActivity"></activity>
        <activity android:name=".talktalk.navigation.ShareCommentActivity"></activity>
        <activity android:name=".talktalk.navigation.WalkCommentActivity"></activity>
        <activity android:name=".talktalk.ShareActivity"></activity>
        <activity android:name=".talktalk.ShareDetailActivity"></activity>
        <activity android:name=".talktalk.ShareEditActivity"></activity>
        <activity android:name=".talktalk.ShareWriteActivity"></activity>
        <activity android:name=".talktalk.WalkActivity"></activity>
        <activity android:name=".talktalk.SetWalkImageActivity"></activity>
        <activity android:name=".talktalk.WalkDetailActivity"></activity>
        <activity android:name=".talktalk.WalkWriteActivity"></activity>

        <uses-library android:name="org.apache.http.legacy" android:required="false"/>

    </application>

</manifest>
