<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TalktalkActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/walkButton"
        android:layout_width="165dp"
        android:layout_height="103dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_walk"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="213dp"
        tools:ignore="MissingConstraints"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/walkButton"
        android:layout_alignEnd="@+id/walkButton"
        android:fontFamily="@font/nanumbarungothic_b"
        android:textColor="@color/text"
        android:text="산책로"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/walkButton"/>

    <Button
        android:id="@+id/shareButton"
        android:layout_width="165dp"
        android:layout_height="103dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_share"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="385dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/shareButton"
        android:layout_alignEnd="@+id/shareButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/nanumbarungothic_b"
        android:textColor="@color/text"
        android:text="물품나눔"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/shareButton"/>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>