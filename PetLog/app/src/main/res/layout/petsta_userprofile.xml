<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme4">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_style_inmain"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumbarungothic_b"
            android:text="프로필보기"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/btn_petsta_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_style_inmain"
            android:clickable="true"
            android:src="@drawable/ic_search"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/petsta_profile_image"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/relativeLayout"
        android:src="@drawable/ic_profile"/>

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/petsta_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumbarungothic_b"
        android:text="닉네임출력"
        android:padding="5dp"
        android:textColor="@color/text"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/profile_text_me"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_text"
        android:maxLength="100"
        android:text="소개글"
        android:gravity="center"
        android:fontFamily="@font/nanumbarungothic_n"
        android:textColor="@color/text"
        android:textSize="20dp"
        android:background="@drawable/border_style"/>

    <TextView
        android:id="@+id/follow_cnt"
        android:lineHeight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_text_me"
        android:layout_alignStart="@id/profile_text_me"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nanumbarungothic_n"
        android:text="구독자 수\n"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/profile_text_me"
        android:layout_alignEnd="@id/profile_text_me"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/nanumbarungothic_b"
        android:text="구독하기"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="18dp" />

</RelativeLayout>