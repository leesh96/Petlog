<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/theme4">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:background="@drawable/button_style_inmain"
            android:src="@drawable/ic_arrow_back"/>

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:clickable="true"
            android:background="@drawable/button_style_inmain"
            android:src="@drawable/ic_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumbarungothic_b"
            android:text="@string/Diary"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="34dp" />

        <ImageButton
            android:id="@+id/btn_dairymodify"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:background="@drawable/button_style_inmain"
            android:src="@drawable/ic_modify"/>

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/diary_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumbarungothic_n"
                android:gravity="center"
                android:text="날짜출력"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/diary_mood"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:padding="10dp" />

            <TextView
                android:id="@+id/diary_title"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:fontFamily="@font/nanumbarungothic_b"
                android:text="제목들어가는곳"
                android:textColor="@color/text"
                android:textSize="26dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/border_style"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/diary_content"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_style"
                android:layout_gravity="center"
                android:gravity="top"
                android:padding="10dp"
                android:fontFamily="@font/nanumbarungothic_n"
                android:textColor="@color/text"
                android:text="내용들어가는곳 내용들어가는곳 내용들어가는곳 내용들어가는곳 내용들어가는곳 내용들어가는곳"
                android:textSize="18dp"/>

            <ImageView
                android:id="@+id/diary_pic"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center" />

        </LinearLayout>

</RelativeLayout>