<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/nanumbarungothic_b"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_below="@+id/tv2"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nanumbarungothic_b"/>


    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="18dp"
        android:fontFamily="@font/nanumbarungothic_n"
        android:layout_below="@+id/tv3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv4"
        android:layout_alignStart="@+id/tv4"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_style"
        android:ems="20"
        android:fontFamily="@font/nanumbarungothic_n"
        android:hint="이메일을 입력하세요."
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="@color/text"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv4"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="20dp"
        android:fontFamily="@font/nanumbarungothic_n"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv5"
        android:layout_alignStart="@+id/tv5"
        android:layout_alignEnd="@+id/et_email"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_style"
        android:ems="20"
        android:fontFamily="@font/nanumbarungothic_n"
        android:hint="비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/text"
        android:textSize="20dp" />


    <Button
        android:id="@+id/btn_signin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:text="@string/login"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="24dp"
        android:layout_below="@id/et_pass"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nanumbarungothic_b"/>

    <Button
        android:id="@+id/btn_findpw"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:text="@string/findpw"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="24dp"
        android:fontFamily="@font/nanumbarungothic_b"
        android:layout_below="@id/btn_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:text="@string/signup"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="24dp"
        android:fontFamily="@font/nanumbarungothic_b"
        android:layout_below="@id/btn_findpw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>