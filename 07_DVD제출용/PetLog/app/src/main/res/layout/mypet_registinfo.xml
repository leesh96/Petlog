<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme4">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:background="@drawable/button_style_inmain"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumbarungothic_b"
            android:text="추가하기"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/mypet_image"
            android:layout_width="320dp"
            android:layout_height="280dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@drawable/ic_addphoto"/>

        <EditText
            android:id="@+id/et_petName"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mypet_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/nanumbarungothic_n"
            android:hint="소중한 반려동물의 이름을 알려주세요."
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_petSex"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_petName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/nanumbarungothic_n"
            android:hint="소중한 반려동물의 성별을 알려주세요."
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_petSpecie"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_petSex"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/nanumbarungothic_n"
            android:hint="소중한 반려동물의 종을 알려주세요."
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_petAge"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_petSpecie"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/nanumbarungothic_n"
            android:hint="소중한 반려동물의 나이를 알려주세요."
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_petBday"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_petAge"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/nanumbarungothic_n"
            android:hint="소중한 반려동물의 생일을 알려주세요."
            android:inputType="date"
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_regist"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/et_petBday"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/nanumbarungothic_b"
            android:text="추가하기"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="22dp" />

    </RelativeLayout>

</RelativeLayout>