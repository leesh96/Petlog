<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Change_info_Activity"
    android:background="@color/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086">

        <TextView
            android:id="@+id/tv19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nanumbarungothic_b"
            android:text="정보 변경"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="36dp" />
        <TextView
            android:id="@+id/tv_change_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv19"
            android:layout_alignStart="@+id/tv19"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/nanumbarungothic_n"
            android:text="닉네임 변경"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/et_changeNick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_change_nick"
            android:layout_alignStart="@+id/tv20"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_style"
            android:ems="10"
            android:fontFamily="@font/nanumbarungothic_n"
            android:hint="변경할 닉네임을 입력하세요."
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_change_pw"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/et_changeNick"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/nanumbarungothic_b"
            android:text="비밀번호 변경"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="24dp" />
        <Button
            android:id="@+id/btn_save"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_change_pw"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/nanumbarungothic_b"
            android:text="변경하기"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="24dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>