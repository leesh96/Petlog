<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.push.PushFragment">


    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="624dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp">

        <Switch
            android:id="@+id/commentpushButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="댓글알림"
            android:layout_marginTop="50dp"
            android:textSize="35dp" />

        <Switch
            android:id="@+id/likepushButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="좋아요알림"
            android:textSize="35dp" />

        <Switch
            android:id="@+id/followpushButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="구독알림"
            android:textSize="35dp" />

        <Switch
            android:id="@+id/diarypushButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="일기알림"
            android:textSize="35dp" />

        <Switch
            android:id="@+id/bdpushbUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="생일알림"
            android:textSize="35dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/text_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PUSH"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="70dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>