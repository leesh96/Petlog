<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/addphoto_image"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_gallary_100dp"/>

    <EditText
        android:id="@+id/petsta_content"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@id/addphoto_image"
        android:layout_marginTop="40dp"
        android:hint="내용을 입력하세요."
        android:paddingLeft="10dp"
        android:fontFamily="@font/nanumbarungothic_n"
        android:background="@drawable/border_style"
        android:inputType="textMultiLine"
        android:textColor="@color/text"
        android:textSize="18dp"
        android:maxLength="255"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/petsta_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/nanumbarungothic_b"
        android:text="공유하기"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="24sp" />

</RelativeLayout>