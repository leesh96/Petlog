<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/theme4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:background="@drawable/button_style_inmain"
            android:src="@drawable/ic_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumbarungothic_b"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/btn_mypetmenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:background="@drawable/button_style_inmain"
            android:src="@drawable/ic_linedmenu"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/petface"
            android:layout_width="360dp"
            android:layout_height="270dp"
            android:layout_gravity="center_horizontal"
            android:padding="@android:dimen/app_icon_size"
            android:src="@drawable/ic_gallary_100dp" />

        <TextView
            android:id="@+id/tv_petName"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/border_style"
            android:fontFamily="@font/nanumbarungothic_n"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_petSex"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_style"
            android:fontFamily="@font/nanumbarungothic_n"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_petSpecie"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_style"
            android:fontFamily="@font/nanumbarungothic_n"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_petAge"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_style"
            android:fontFamily="@font/nanumbarungothic_n"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_petBday"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_style"
            android:focusable="false"
            android:fontFamily="@font/nanumbarungothic_n"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/text"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="280dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_style_inmain"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:background="@color/theme4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nanumbarungothic_n"
                    android:gravity="center_vertical"
                    android:text="메모"
                    android:textColor="@color/text"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/btn_memoapply"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_check_coltheme_24dp" />

                <ImageButton
                    android:id="@+id/btn_memodel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_delete" />

            </LinearLayout>

            <EditText
                android:id="@+id/mypet_memo"
                android:layout_width="380dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>